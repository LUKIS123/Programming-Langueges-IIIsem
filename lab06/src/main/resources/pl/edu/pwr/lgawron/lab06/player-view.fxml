<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.edu.pwr.lgawron.lab06.player.AppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="TOP_CENTER" spacing="20">
        <Label fx:id="connectionInfo" alignment="TOP_LEFT"/>
        <Button fx:id="registerButton" text="Register To Game" alignment="TOP_CENTER"
                onAction="#onRegisterButtonClick"/>
        <Button fx:id="startButton" text="Join Game" alignment="TOP_CENTER" onAction="#onStartButtonClick"/>

        <!--   temporary stuff for movement    -->
        <HBox>
            <Button fx:id="up" text="up" onAction="#moveUp"/>
            <Button fx:id="left" text="left"/>
            <Button fx:id="right" text="right"/>
            <Button fx:id="down" text="down"/>

        </HBox>


    </HBox>


    <HBox fx:id="mainBox"/>

</VBox>
